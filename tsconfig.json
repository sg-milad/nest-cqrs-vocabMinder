{
   "compilerOptions": {
     "module": "commonjs",
     "declaration": true,
     "noImplicitAny": false,
     "removeComments": true,
     "noLib": false,
     "allowSyntheticDefaultImports": true,
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "target": "es6",
     "sourceMap": true,
     "outDir": "./dist",
     "baseUrl": "./src",
     "paths": {
      "@src/*": ["./src/*"],
      "@src/entities/*": ["./src/entities/*"],
      "@src/errors/*": ["./src/common/errors/*"],
      "@src/shared/functions/*": ["./src/modules/shared/functions/*"],
      "@test/*": ["./test/*"]
    }
   },
   "include": [
     "src/**/*"
   ],
   "exclude": [
     "node_modules",
     "**/*.spec.ts"
   ]
 }
 