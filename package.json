{
   "name": "nest-boilerplate",
   "version": "1.0.0",
   "description": "VivifyIdeas Nest Boilerplate",
   "author": "milad",
   "license": "MIT",
   "scripts": {
      "build": "nest build",
      "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
      "start": "ts-node src/index.ts",
      "start:dev": "nest start --watch",
      "start:debug": "nest start --debug --watch",
      "start:prod": "node dist/main",
      "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:cov": "jest --coverage",
      "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
      "test:e2e": "jest --config ./test/jest-e2e.json",
      "webpack": "webpack --config webpack.config.js",
      "migration:create": "ts-node ./node_modules/typeorm/cli.js migration:create",
      "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -d ormconfig.ts",
      "migration:up": "ts-node ./node_modules/typeorm/cli.js migration:run -d ormconfig.ts",
      "migration:down": "ts-node ./node_modules/typeorm/cli.js migration:revert -d ormconfig.ts",
      "db:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync -d ormconfig.ts",
      "db:drop": "ts-node ./node_modules/typeorm/cli.js schema:drop -d ormconfig.ts",
      "db:test:sync": "cross-env NODE_ENV=tEsT ts-node ./node_modules/typeorm/cli.js schema:sync -d ormconfig.ts",
      "db:test:drop": "cross-env NODE_ENV=tEsT ts-node ./node_modules/typeorm/cli.js schema:drop -d ormconfig.ts",
      "seed:create": "ts-node ./node_modules/typeorm/cli.js migration:create",
      "seed:up": "ts-node ./node_modules/typeorm/cli.js migration:run -d ormconfig-seeder.ts",
      "seed:down": "ts-node ./node_modules/typeorm/cli.js migration:revert -d ormconfig-seeder.ts",
      "add-migration": "ts-node ./node_modules/typeorm/cli.js migration:generate -d ormconfig.ts ",
      "update-database": "ts-node ./node_modules/typeorm/cli.js migration:run",
      "typeorm": "typeorm-ts-node-commonjs"
   },
   "dependencies": {
      "@nestjs/common": "^10.0.0",
      "@nestjs/config": "^3.0.0",
      "@nestjs/core": "^10.0.0",
      "@nestjs/cqrs": "^10.1.0",
      "@nestjs/jwt": "^10.1.0",
      "@nestjs/passport": "^10.0.0",
      "@nestjs/platform-express": "^10.0.0",
      "@nestjs/swagger": "^7.1.6",
      "@nestjs/typeorm": "^9.0.1",
      "bcrypt": "^5.0.1",
      "class-transformer": "^0.5.1",
      "class-validator": "^0.14.0",
      "nest-winston": "^1.9.3",
      "passport": "^0.5.3",
      "passport-jwt": "^4.0.0",
      "pg": "^8.4.0",
      "reflect-metadata": "^0.1.13",
      "rxjs": "^7.8.1",
      "swagger-ui-express": "^4.3.0",
      "typeorm": "0.3.17",
      "typescript": "^4.6.2",
      "winston": "^3.10.0"
   },
   "devDependencies": {
      "@nestjs/cli": "^10.0.1",
      "@nestjs/schematics": "^10.0.1",
      "@nestjs/testing": "^10.0.0",
      "@swc/cli": "^0.1.62",
      "@swc/core": "^1.3.64",
      "@types/bcrypt": "^5.0.0",
      "@types/express": "^4.17.17",
      "@types/jest": "^29.5.2",
      "@types/node": "^16.11.10",
      "@types/supertest": "^2.0.12",
      "@typescript-eslint/eslint-plugin": "^5.59.11",
      "@typescript-eslint/parser": "^5.59.11",
      "eslint": "^8.42.0",
      "eslint-config-prettier": "^8.8.0",
      "eslint-plugin-prettier": "^4.2.1",
      "jest": "^29.5.0",
      "prettier": "^2.8.8",
      "source-map-support": "^0.5.20",
      "supertest": "^6.3.3",
      "ts-jest": "^29.1.0",
      "ts-loader": "^9.4.3",
      "ts-node": "10.7.0",
      "tsconfig-paths": "4.1.0",
      "typescript": "^4.7.4"
   },
   "jest": {
      "moduleFileExtensions": [
         "js",
         "json",
         "ts"
      ],
      "rootDir": "src",
      "testRegex": ".spec.ts$",
      "transform": {
         "^.+\\.(t|j)s$": "ts-jest"
      },
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
   }
}
